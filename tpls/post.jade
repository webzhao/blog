extends ./base.jade

block main
    article.yue
        h2 #{title}
        p.meta 发表于 #{date}，所属分类：#{tags}
        div !{content}
        script(async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
        ins.adsbygoogle(style="display:block" data-ad-client="ca-pub-8418855232316368" data-ad-slot="3637735692" data-ad-format="link")
        script.
            (adsbygoogle = window.adsbygoogle || []).push({});
        //- disqus评论
        #disqus_thread
block scripts
    script.
        var disqus_config = function () {
            this.page.url = 'https://webzhao.me/#{name}.html';
            this.page.identifier = '#{name}';
        };
        (function() {
            var d = document, s = d.createElement('script');
            s.src = '//webzhaoblog.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    script(src="#{uri('/assets/js/prism.js')}" async data-manual)

